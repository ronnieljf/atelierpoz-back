{
  "name": "atelierpoz-back",
  "version": "1.0.0",
  "description": "Backend API para Atelier Poz",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "migrate": "node src/db/migrate.js",
    "migrate:add-phone": "node src/db/migrations/001_add_phone_number_to_store_users.js",
    "migrate:products": "node src/db/migrations/002_create_products_and_categories.js",
    "migrate:posts": "node src/db/migrations/003_create_posts.js",
    "migrate:meta": "node src/db/migrations/004_create_meta_integrations.js",
    "seed": "node src/db/seed.js",
    "seed:categories": "node src/db/scripts/seed-categories.js",
    "seed:products": "node src/db/scripts/create_test_products.js",
    "seed:products:variants": "node src/db/scripts/create_test_products_with_variant_images.js",
    "seed:mock": "node src/scripts/seed-100-mock-products.js",
    "fix:products": "node src/scripts/fix-products-format.js",
    "migrate:receivable-payments": "node src/db/migrations/014_receivable_payments.js",
    "check": "node --check src/server.js && echo '✓ Backend syntax check passed'",
    "verify": "npm run check && echo '✓ Backend ready for production'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.2.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "groq-sdk": "^0.37.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-forge": "^1.3.3",
    "pg": "^8.11.3",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6"
  }
}
